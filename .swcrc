{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"],
      "@infraestructure/*": ["src/infraestructure/*"],
      "@providers/*": ["src/providers/*"],
      "@shared/*": ["src/shared/*"],
      "@tests/*": ["tests/*"]
    },
    "target": "es2022"
  },
  "minify": false
}
